//MySql Code

USE  employee;
CREATE TABLE employee (
    id INT PRIMARY KEY,
    name VARCHAR(50)
);
SELECT * From employee;


//Java code

import java.sql.*;

public class App {
    public static void main(String[] args) throws SQLException {

        String url = "jdbc:mysql://localhost:3306/employee";
        String username = "your_username";
        String password = "-------";

        Connection connection = DriverManager.getConnection(url, username, password);

        Statement statement = connection.createStatement();

        // READ records
        System.out.println("----- Reading Data -----");
        ResultSet resultSet = statement.executeQuery("SELECT * FROM employee");

        while (resultSet.next()) {
            System.out.println("Id: " + resultSet.getInt("id") +
                    ", Name: " + resultSet.getString("name"));
        }

        // INSERT 1st record
        System.out.println("----- Inserting Record 1 -----");
        PreparedStatement insertStmt1 = connection.prepareStatement(
                "INSERT INTO employee (id, name) VALUES (?, ?)"
        );
        insertStmt1.setInt(1, 4);
        insertStmt1.setString(2, "John");
        System.out.println(insertStmt1.executeUpdate() + " record(s) inserted");

        // INSERT 2nd record
        System.out.println("----- Inserting Record 2 -----");
        PreparedStatement insertStmt2 = connection.prepareStatement(
                "INSERT INTO employee (id, name) VALUES (?, ?)"
        );
        insertStmt2.setInt(1, 5);
        insertStmt2.setString(2, "Saakshi");
        System.out.println(insertStmt2.executeUpdate() + " record(s) inserted");

        // UPDATE record (id=4)
        System.out.println("----- Updating Data -----");
        PreparedStatement updateStmt = connection.prepareStatement(
                "UPDATE employee SET name=? WHERE id=?"
        );
        updateStmt.setString(1, "Michael");
        updateStmt.setInt(2, 4);
        System.out.println(updateStmt.executeUpdate() + " record(s) updated");

        // DELETE record (id=4)
        System.out.println("----- Deleting Data -----");
        PreparedStatement deleteStmt = connection.prepareStatement(
                "DELETE FROM employee WHERE id=?"
        );
        deleteStmt.setInt(1, 4);
        System.out.println(deleteStmt.executeUpdate() + " record(s) deleted");

        connection.close();
        System.out.println("Connection closed.");
    }
}
